a = [3, 3, 8, 9, 1]
b = [5, 8, 6, 4]
s1 = sum(a)
s4 = sum(b)
S1 = a+b
a.insert(0, 1)
b.remove(4)
s3 = sum(b)
s = sum(a)
S = a+b
print(S1)
print(S)
print(s, s1)
print(s3, s4)


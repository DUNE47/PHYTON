# multiple assigment

german, latin, roma = "21" , "25" , "30"
print(german,latin, roma)
german=latin=roma = 47
print(german, latin, roma)

name2 = "wolverine"
print(len(name2))
print(name2.find("o"))
print(name2.capitalize())
print(name2.upper())
print(name2.lower())
print(name2.isdigit())
print(name2.isalpha())
print(name2.count("e"))
print(name2.replace("e", "a"))
print(name2*3)

#type casting = convert the data type of a value to
# another data type

x = 1       #int
y =  1.5    #float
z = "3"     #str

print(x, y, z)
y = int(y)
print(x, y, z)

#z = z*3
print(x, y, z)

z = int(z)
print(x, y, z*3)

x = float(x)
y = float(y)
z = float(z)
print(x, y, z)

print("Numerele sunt: " + str(x), str(y), str(z))

